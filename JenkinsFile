pipeline{
    agent any

    tools{
        jdk "Jdk"
        maven 'maven'
    }

    environment{
        SCANNER_HOME=tool 'sonarqube-Scanner'
    }

    stages{

        stage ("sonar quality status"){ 

            
            steps{

                withSonarQubeEnv('sonarqube-server') {
                    sh ''' mvn clean compile
                    $SCANNER_HOME/bin/sonarqube-Scanner -Dsonar.projectName=demo-counter \
                    -Dsonar.java.binaries=. \
                    -Dsonar.projectKey=demo-counter '''

                

                }

            
            }
        
            
        }

        stage('Quality Gate status'){

            steps{

                script{

                    echo  "not done"

                    //waitForQualityGate abortPipeline: false, credentialsId: 'sonar-tokan'
                }
            }
        }
    }
}